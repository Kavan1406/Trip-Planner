        app:layout_constraintBottom_toTopOf="@+id/loadDSN"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/LoadSN"
        android:layout_width="183dp"
        android:layout_height="50dp"
