<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF99"
    tools:context=".Duration">

    <TextView
        android:id="@+id/to"
        android:layout_width="82dp"
        android:layout_height="47dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="16dp"
        android:text="To"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tPlace"
        app:layout_constraintEnd_toStartOf="@+id/ddt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/from"
        android:layout_width="82dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:text="From"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fPlace"
        app:layout_constraintEnd_toStartOf="@+id/dd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ddt"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="DD"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tPlace"
        app:layout_constraintEnd_toStartOf="@+id/mmt"
        app:layout_constraintTop_toBottomOf="@+id/fPlace" />

    <EditText
        android:id="@+id/dd"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:hint="DD"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/fPlace"
        app:layout_constraintEnd_toStartOf="@+id/mm"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/yyt"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="YY"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tPlace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fPlace" />

    <EditText
        android:id="@+id/mmt"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="MM"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tPlace"
        app:layout_constraintEnd_toStartOf="@+id/yyt" />

    <TextView
        android:id="@+id/noOfPerson"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:layout_marginEnd="53dp"
        android:layout_marginStart="54dp"
        android:text="Number Of Persons"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:layout_marginEnd="84dp"
        android:layout_marginStart="85dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mm"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="99dp"
        android:ems="10"
        android:hint="MM"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/fPlace"
        app:layout_constraintEnd_toStartOf="@+id/yy"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/yy"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:hint="YY"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/fPlace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fPlace"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:ems="10"
        android:hint="Starting Point"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tPlace"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:ems="10"
        android:hint="Destination"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/noOfPerson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="23dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nop" />

</android.support.constraint.ConstraintLayout>